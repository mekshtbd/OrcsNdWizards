<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.MatchmakingActivity"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWiz"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/wizard"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/playBtn"
            android:layout_width="200dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/play_button"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_effect_blue"/>
        <ProgressBar
            android:id="@+id/searchingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button"
            android:enabled="false"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:background="@drawable/button_effect_red"
            android:layout_marginTop="50dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/logOutBtn"
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/logout_button"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="25dp"

                android:background="@drawable/button_effect_orange"/>

            <ImageView
                android:id="@+id/imageOrc"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/orc"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>